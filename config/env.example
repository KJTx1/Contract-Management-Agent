# Contract Management Agent - Environment Configuration

# =============================================================================
# API Keys
# =============================================================================

# OpenAI API Key (Required for embeddings and LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Cohere API Key (Optional - for alternative embeddings)
COHERE_API_KEY=your_cohere_api_key_here

# LangSmith API Key (Optional - for tracing and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=contract-management-agent

# =============================================================================
# OCI Configuration (Required for Object Storage)
# =============================================================================

# OCI Configuration File Path (default: ~/.oci/config)
OCI_CONFIG_FILE=~/.oci/config

# OCI Profile (default: DEFAULT)
OCI_PROFILE=DEFAULT

# OCI Object Storage Bucket Name
OCI_BUCKET_NAME=contract-documents

# OCI Object Storage Bucket ID (get from OCI Console)
OCI_BUCKET_ID=your_bucket_ocid_here

# OCI Environment Variables (alternative to config file)
# Set these if you prefer environment variables over config file
# OCI_USER_OCID=ocid1.user.oc1..your_user_ocid
# OCI_FINGERPRINT=your_api_key_fingerprint
# OCI_TENANCY_OCID=ocid1.tenancy.oc1..your_tenancy_ocid
# OCI_REGION=us-ashburn-1
# OCI_KEY_FILE=~/.oci/oci_api_key.pem

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding Provider (openai or cohere)
EMBEDDING_PROVIDER=openai

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# LLM Configuration
# =============================================================================

# LLM Provider (openai or cohere)
LLM_PROVIDER=openai

# LLM Model
LLM_MODEL=gpt-4o-mini

# =============================================================================
# Retrieval Configuration
# =============================================================================

# Number of chunks to retrieve
TOP_K=20

# Similarity threshold (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.3

# =============================================================================
# Processing Configuration
# =============================================================================

# Chunk size for text processing
CHUNK_SIZE=800

# Chunk overlap for text processing
CHUNK_OVERLAP=100
